# Example .env for Click Clack Cash Flow with Real Payment Integration

# Real Payment Configuration
VITE_USE_REAL_PAYMENTS=true  # Set to false to use demo mode only
VITE_CASHOUT_SERVER_URL=http://localhost:4000  # URL of cashout server

# Lovable Cloud Configuration (fallback for demo mode)
VITE_LOVABLE_CLOUD_API_URL=https://api.lovable.cloud
VITE_LOVABLE_CLOUD_API_KEY=your_lovable_cloud_api_key_here

# Stripe Configuration (for cashout server)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
CONNECTED_ACCOUNT_ID=acct_your_stripe_account_id
PORT=4000  # Cashout server port

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key
